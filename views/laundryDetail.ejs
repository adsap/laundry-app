<%-include('partials/header.ejs' , {title : 'Laundry Detail'}) %>
  <div><h2>Laundries Detail</h2></div>
  <div>
    <table>
      <tr>
        <td>ID</td>
        <td>:</td>
        <td><%= laundry.id %></td>
      </tr>
      <tr>
        <td>Customer</td>
        <td>:</td>
        <td><%= laundry.Customer.name %></td>
      </tr>
      <tr>
        <td>Employee</td>
        <td>:</td>
        <td><%= laundry.Employee.name %></td>
      </tr>
      <tr>
        <td>Laundry Type</td>
        <td>:</td>
        <td><%= laundry.laundry_type %></td>
      </tr>
      <tr>
        <td>Weight</td>
        <td>:</td>
        <td><%= laundry.weight %></td>
      </tr>
      <tr>
        <td>Entry Date</td>
        <td>:</td>
        <td><%= moment(laundry.entry_date).format('YYYY-MM-DD') %></td>
      </tr>
      <tr>
        <td>Finish Date</td>
        <td>:</td>
        <% if (laundry.finish_date) { %>
          <td><%= moment(laundry.finish_date).format('YYYY-MM-DD') %></td>
        <% } else { %>
          <td>On Process</td>
        <% } %>
      </tr>
      <tr>
        <td>Total Cost</td>
        <td>:</td>
        <td><%= laundry.total_cost %></td>
      </tr>
    </table>
  </div>
<%-include('partials/footer.ejs') %>
