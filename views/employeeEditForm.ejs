<%-include('partials/header.ejs' , {title : 'Edit Employee'}) %>
  <div class="container d-flex flex-column justify-content-center align-items-center" style="width: 100vw; height: 70vh;">
    <p><h2>Edit Employee</h2></p>
    <form action="/employee/edit/<%= employee.id %>" method="POST">
      <table>
        <tr>
          <td>
            <label for="name">Name:</label>
          </td>
          <td>
            <input type="text" name="name" id="name" value="<%= employee.name %>">
          </td>
        </tr>
        <tr>
          <td>
            <label for="phone">Phone:</label>
          </td>
          <td>
            <input type="text" name="phone" id="phone" value="<%= employee.phone %>">
          </td>
        </tr>
        <tr>
          <td>
            <label for="email">Email:</label>
          </td>
          <td>
            <input type="email" name="email" id="email" value="<%= employee.email %> ">
          </td>
        </tr>
        <tr>
          <td>
            <label for="address">Address:</label>
          </td>
          <td>
            <input type="text" name="address" id="address" value="<%= employee.address %> ">
          </td>
        </tr>
      </table>
      <button type="submit" class="btn btn-primary">Save</button>
      <a href="/employee" class="btn btn-danger">Cancel</a>
    </form>
  </div>
<%-include('partials/footer.ejs') %>
