<%-include('partials/header.ejs' , {title : 'Customer Detail'}) %>
  <div class="container d-flex flex-column justify-content-center align-items-center"
    style="width: 100vw; height: 70vh;">
    <p><h2>Customer Detail</h2></p>
    <form>
      <table>
        <tr>
          <td>
            <label for="name">Name:</label>
          </td>
          <td>
            <input type="text" name="name" id="name" value="<%= customer.name %>" disabled>
          </td>
        </tr>
        <tr>
          <td>
            <label for="phone">Phone:</label>
          </td>
          <td>
            <input type="text" name="phone" id="phone" value="<%= customer.phone %>" disabled>
          </td>
        </tr>
        <tr>
          <td>
            <label for="email">Email:</label>
          </td>
          <td>
            <input type="email" name="email" id="email" value="<%= customer.email %> " disabled>
          </td>
        </tr>
        <tr>
          <td>
            <label for="address">Address:</label>
          </td>
          <td>
            <input type="text" name="address" id="address" value="<%= customer.address %> " disabled>
          </td>
        </tr>
      </table>
      <a href="/customer" class="btn btn-danger">Back</a>
    </form>
  </div>
<%-include('partials/footer.ejs') %>